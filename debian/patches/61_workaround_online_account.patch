+          {
+            g_warning ("Could not find settings panel \"%s\"", start_id);
+            return FALSE;
+          }
+        GAppInfo*appinfo = g_desktop_app_info_new_from_filename (desktop);
+        const gchar *name = g_app_info_get_name (appinfo);
