Index: gnome-control-center-3.29.92/panels/privacy/cc-privacy-panel.c
===================================================================
--- gnome-control-center-3.29.92.orig/panels/privacy/cc-privacy-panel.c
+++ gnome-control-center-3.29.92/panels/privacy/cc-privacy-panel.c
@@ -414,6 +414,11 @@ add_screen_lock (CcPrivacyPanel *self)
   g_settings_bind (self->notification_settings, "show-in-lock-screen",
                    w, "active",
                    G_SETTINGS_BIND_DEFAULT);
+
+  w = GTK_WIDGET (gtk_builder_get_object (self->builder, "screen_lock_suspend"));
+  g_settings_bind (self->lock_settings, "ubuntu-lock-on-suspend",
+                   w, "active",
+                   G_SETTINGS_BIND_DEFAULT);
 }
 
