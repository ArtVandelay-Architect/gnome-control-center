+static gchar *
+get_theme_dir (void)
+{
+  const gchar *var;
+
+  var = g_getenv ("GTK_DATA_PREFIX");
+  if (var == NULL)
+    var = "/usr";
+
+  return g_build_filename (var, "share", "themes", NULL);
+}
